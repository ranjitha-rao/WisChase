<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wischase.activity.AnswerUpload"
    tools:showIn="@layout/activity_answer_upload" android:background="@color/colorBackground">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout">

        <include layout="@layout/categorytable"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_height="150dp"
            android:layout_column="1" />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/options"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowSpan="10">

            <com.wischase.view.CustomRadioButton
            android:layout_row="2"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/option1"
                android:id="@+id/uploadopt1"
                android:textSize="22sp"
                android:minHeight="30dp"
                android:height="45dp"
                />
            <ImageView
                android:layout_column="0"
                android:layout_row="3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@android:color/black"
                />

            <com.wischase.view.CustomRadioButton
                android:textColor="@android:color/white"
                android:layout_row="4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/option2"
                android:id="@+id/uploadopt2"
                android:minHeight="30dp"
                android:height="45dp"
                android:textSize="22sp"
                 />
            <ImageView
                android:layout_column="0"
                android:layout_row="5"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@android:color/black"
                />

            <com.wischase.view.CustomRadioButton
                android:textColor="@android:color/white"
                android:layout_row="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option3"
                android:id="@+id/uploadopt3"
                android:minHeight="30dp"
                android:height="45dp"
                android:textSize="22sp" />
            <ImageView
                android:layout_column="0"
                android:layout_row="7"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@android:color/black"
                />

            <com.wischase.view.CustomRadioButton
                android:textColor="@android:color/white"
                android:layout_row="8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/option4"
                android:id="@+id/uploadopt4"
                android:minHeight="30dp"
                android:height="45dp"
                android:textSize="22sp"/>

        </RadioGroup>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_row="2"
            android:layout_column="1">
<HorizontalScrollView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:visibility="visible">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:textColor="@color/colorBackground"
            android:id="@+id/up_option1"
            android:text=" "
            android:textCursorDrawable="@null"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:width="250dp" />
</HorizontalScrollView>
        </ScrollView>
        <ImageView
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@android:color/black"
            />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_row="4"
            android:layout_column="1">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:textColor="@color/colorBackground"
            android:id="@+id/up_option2"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:layout_row="4"
            android:textCursorDrawable="@null"
            android:text=" "
            android:layout_column="1"
            android:width="250dp"/>
        </HorizontalScrollView>
        </ScrollView>
        <ImageView
            android:layout_column="1"
            android:layout_row="5"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@android:color/black"
            />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3"
            android:layout_row="6"
            android:layout_column="1">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:textColor="@color/colorBackground"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:id="@+id/up_option3"
            android:text=" "
            android:textCursorDrawable="@null"
            android:layout_row="6"
            android:layout_column="1"
            android:width="250dp"/>
        </HorizontalScrollView>
        </ScrollView>
        <ImageView
            android:layout_column="1"
            android:layout_row="7"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@android:color/black"
            />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView4"
            android:layout_row="8"
            android:layout_column="1">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:textColor="@color/colorBackground"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:id="@+id/up_option4"
            android:textCursorDrawable="@null"
            android:layout_row="8"
            android:text=" "
            android:layout_column="1"
            android:width="250dp"/>
        </HorizontalScrollView>
        </ScrollView>
        <ImageView
            android:layout_column="1"
            android:layout_row="9"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@android:color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:id="@+id/upload_answer"
            android:layout_row="10"
            android:layout_column="0"
             android:onClick="uploadAnswer"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explanation"
            android:id="@+id/next_explanation"
            android:layout_row="10"
            android:layout_column="1"
            android:onClick="nextExplanation"/>

    </GridLayout>

</RelativeLayout>
