<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wischase.activity.optionscreen"
    tools:showIn="@layout/activity_optionscreen"
    android:background="#171515">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <com.wischase.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What would you like to do?"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:textColor="@color/colorText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="53dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:onClick=""/>

        <ImageButton
            android:layout_width="128dp"
            android:layout_height="120dp"
            android:id="@+id/imgbutupq"
            android:src="@mipmap/uploadquestion"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:onClick="uploadques"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"/>

        <ImageButton
            android:layout_width="128dp"
            android:layout_height="120dp"
            android:id="@+id/imgbutupfile"
            android:src="@mipmap/uploadfile"
            android:layout_gravity="left|top"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:onClick="uploadfile"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="3"/>

        <ImageButton
                android:layout_width="128dp"
                android:layout_height="120dp"
                android:id="@+id/imgbuttest"
                android:src="@mipmap/take_test"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="taketest"
                android:layout_gravity="left|top"
                android:layout_row="2"
                android:layout_column="0" />


    </GridLayout>
</RelativeLayout>
