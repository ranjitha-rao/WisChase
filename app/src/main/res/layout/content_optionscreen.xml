<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wischase.activity.optionscreen"
    tools:showIn="@layout/activity_optionscreen"
    android:background="#171515">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <com.wischase.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What would you like to do?"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:textColor="#fefdfd"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="53dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="151dp"
                android:layout_height="126dp"
                android:id="@+id/imgbutupfile"
                android:src="@mipmap/uploadfile"
                android:layout_gravity="left|top"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:nestedScrollingEnabled="true" />

            <ImageButton
                android:layout_width="154dp"
                android:layout_height="128dp"
                android:id="@+id/imgbutupq"
                android:src="@mipmap/uploadquestion"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="right|top" />

            <ImageButton
                android:layout_width="154dp"
                android:layout_height="129dp"
                android:id="@+id/imgbuttest"
                android:src="@mipmap/take_test"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
