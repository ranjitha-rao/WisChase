<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBackground" android:layout_margin="@dimen/text_margin">
    <RadioGroup android:id="@+id/answerOption" android:layout_rowSpan="8"
        android:layout_row="0"
        android:layout_column="0">
        <com.wischase.view.CustomRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionOneRadio"
            android:text="1"
            android:layout_column="0"
            android:textColor="#ffffff" />
        <com.wischase.view.CustomRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionTwoRadio"
            android:text="2"
            android:layout_column="0"
                    />
        <com.wischase.view.CustomRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionThreeRadio"
            android:text="3"
            android:layout_column="0"
            />

        <com.wischase.view.CustomRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionFourRadio"
            android:text="4"
            android:layout_column="0"
            />
    </RadioGroup>
</GridLayout>